@model IEnumerable<ExpenseSplitter.Web.Models.Trip>
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trips";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Trips</h2>
        <a class="btn btn-primary" href="@Url.Action("Create", "Trips")">Create Trip</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No trips yet. Create one to get started.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-3">
            @foreach (var t in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title mb-0">@t.TripName</h5>
                                <span class="badge @(t.IsActive ? "bg-success" : "bg-secondary")">@(t.IsActive ? "Active" : "Closed")</span>
                            </div>
                            <p class="text-muted mt-2">@t.Description</p>
                            <div class="small text-muted">@t.StartDate:d â€” @t.EndDate:d</div>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex gap-2">
                            <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Details", "Trips", new { id = t.TripId })">Open</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
