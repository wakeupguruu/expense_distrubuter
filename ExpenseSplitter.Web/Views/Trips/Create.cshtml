@model ExpenseSplitter.Web.Models.Trip
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Trip";
}
<div class="container py-4">
    <h2>Create Trip</h2>
    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="TripName" class="form-label"></label>
            <input asp-for="TripName" class="form-control" />
            <span asp-validation-for="TripName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="TotalBudget" class="form-label"></label>
                <input asp-for="TotalBudget" class="form-control" />
                <span asp-validation-for="TotalBudget" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-check mt-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive">Active</label>
        </div>
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Trips")">Cancel</a>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
